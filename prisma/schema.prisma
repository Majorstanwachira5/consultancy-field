generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  permissions String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  users User[]
  
  @@map("roles")
}

model User {
  id          String   @id @default(cuid())
  firstName   String
  lastName    String
  email       String   @unique
  phone       String?
  password    String
  roleId      String
  isActive    Boolean  @default(true)
  isVerified  Boolean  @default(false)
  lastLoginAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  role        Role     @relation(fields: [roleId], references: [id])
  sessions    Session[]
  
  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("sessions")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  client      String
  service     String
  status      String   @default("Planning")
  priority    String   @default("Medium")
  startDate   DateTime
  dueDate     DateTime
  budget      Int
  progress    Int      @default(0)
  assignedTo  String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("projects")
}

model ServiceRequest {
  id          String   @id @default(cuid())
  type        String
  client      String
  email       String
  phone       String?
  status      String   @default("New")
  priority    String   @default("Medium")
  budget      String?
  timeline    String?
  description String?
  requirements String?
  submittedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("service_requests")
}